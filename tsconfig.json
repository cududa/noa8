{
    // inputs
    "include": [
        "src/index.js",
        "src/components/*.js",
    ],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        // output
        "outDir": "./dist",
        "target": "es2021",
        "module": "ESNext",
        "declaration": true,
        "emitDeclarationOnly": true,
        "rootDir": ".",
        // settings
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2021"
        ],
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        // Force imports to resolve to this project's node_modules
        // This prevents type conflicts with symlinked dependencies
        "baseUrl": ".",
        "paths": {
            "@babylonjs/core": ["./node_modules/@babylonjs/core"],
            "@babylonjs/core/*": ["./node_modules/@babylonjs/core/*"],
            "meshwriter": ["./node_modules/meshwriter"],
            "meshwriter/*": ["./node_modules/meshwriter/*"]
        },
        // "downlevelIteration": true,
        // "useDefineForClassFields": false,
    },
    "typeAcquisition": {
        "exclude": [
            "@types/gl-vec3", // automatic types are both wrong and out of date
        ]
    },
    "typedocOptions": {
        "entryPoints": [
            "src/index.js",
        ],
        "plugin": [
            "typedoc-plugin-missing-exports",
        ],
        "entryPointStrategy": "expand",
        "name": "Cudu API reference",
        "out": "docs/API",
        "readme": "docs/api-header.md",
        "excludeInternal": true, // excludes stuff tagged @internal
        "excludeExternals": true, // excludes imports matching below
        "externalPattern": [
            "node_modules/!(game-inputs|voxel-physics-engine)/**",
        ],
        "disableSources": true,
    },
}
